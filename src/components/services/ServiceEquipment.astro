---
import Icon from '../common/Icon.astro';

export interface Props {
  equipment: Array<{
    number: number;
    label: string;
    icon?: string;
  }>;
}

const { equipment } = Astro.props;
---

<section class="service-equipment">
  <div class="container">
    <div class="equipment-content">
      <div class="equipment-header">
        <h2>Our Equipment Fleet</h2>
        <p>Professional-grade equipment ready to handle any job</p>
      </div>
      
      <div class="equipment-stats">
        {equipment.map((item, index) => (
          <div class="stat-card" style={`animation-delay: ${index * 0.15}s`}>
            <div class="stat-icon">
              <Icon name={item.icon || "truck"} size={40} />
            </div>
            <div class="stat-number" data-count={item.number}>
              <span class="counter">{item.number}</span>
              <span class="plus">+</span>
            </div>
            <div class="stat-label">{item.label}</div>
          </div>
        ))}
      </div>
      
      <div class="equipment-footer">
        <div class="total-equipment">
          <span class="total-number">
            {equipment.reduce((sum, item) => sum + item.number, 0)}+
          </span>
          <span class="total-label">Total Equipment Pieces</span>
        </div>
        <p class="equipment-description">
          Our extensive fleet ensures we can handle multiple properties simultaneously, 
          providing reliable service even during the heaviest snow events.
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .service-equipment {
    padding: var(--space-16) 0;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    position: relative;
    overflow: hidden;
  }
  
  .service-equipment::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
  }
  
  .equipment-content {
    position: relative;
    z-index: 1;
  }
  
  .equipment-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }
  
  .equipment-header h2 {
    color: var(--white);
    font-size: var(--text-3xl);
    margin-bottom: var(--space-3);
  }
  
  .equipment-header p {
    color: rgba(255, 255, 255, 0.9);
    font-size: var(--text-lg);
  }
  
  .equipment-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-12);
  }
  
  .stat-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    text-align: center;
    transition: all 0.3s ease;
    animation: fadeInScale 0.6s ease-out forwards;
    opacity: 0;
  }
  
  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  .stat-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }
  
  .stat-icon {
    margin-bottom: var(--space-4);
  }
  
  .stat-icon :global(.icon) {
    color: var(--white);
  }
  
  .stat-number {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 2px;
    margin-bottom: var(--space-2);
  }
  
  .counter {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--white);
    line-height: 1;
  }
  
  .plus {
    font-size: var(--text-2xl);
    color: rgba(255, 255, 255, 0.8);
  }
  
  .stat-label {
    color: rgba(255, 255, 255, 0.9);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
  }
  
  .equipment-footer {
    text-align: center;
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .total-equipment {
    display: inline-flex;
    align-items: baseline;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }
  
  .total-number {
    font-size: var(--text-5xl);
    font-weight: var(--font-extrabold);
    color: var(--white);
  }
  
  .total-label {
    font-size: var(--text-xl);
    color: rgba(255, 255, 255, 0.9);
    font-weight: var(--font-medium);
  }
  
  .equipment-description {
    max-width: 600px;
    margin: 0 auto;
    color: rgba(255, 255, 255, 0.9);
    font-size: var(--text-lg);
    line-height: 1.6;
  }
  
  @media (max-width: 768px) {
    .equipment-stats {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .total-number {
      font-size: var(--text-4xl);
    }
    
    .total-label {
      font-size: var(--text-lg);
    }
  }
  
  @media (min-width: 1200px) {
    .equipment-stats {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>