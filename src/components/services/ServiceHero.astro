---
import Button from '../common/Button.astro';

export interface Props {
  hero: {
    title: string;
    subtitle?: string;
    backgroundImage: string;
    videoUrl?: string;
    badges?: string[];
  };
}

const { hero } = Astro.props;
---

<div class="hero min-h-[70vh]" style={`background-image: url(${hero.backgroundImage});`}>
  <div class="hero-overlay bg-gradient-to-b from-secondary/85 via-primary/75 to-secondary/90"></div>
  
  {hero.videoUrl && (
    <video 
      autoplay 
      muted 
      loop 
      playsinline
      class="absolute inset-0 w-full h-full object-cover -z-10"
    >
      <source src={hero.videoUrl} type="video/mp4" />
    </video>
  )}
  
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-4xl">
      {hero.badges && (
        <div class="flex flex-wrap gap-2 justify-center mb-6">
          {hero.badges.map((badge) => (
            <div class="badge badge-lg gap-2 bg-base-100/20 border-base-100/30 text-base-100">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              {badge}
            </div>
          ))}
        </div>
      )}
      
      <h1 class="mb-5 text-5xl md:text-6xl font-bold drop-shadow-lg">{hero.title}</h1>
      
      {hero.subtitle && (
        <p class="mb-8 text-xl md:text-2xl opacity-95 drop-shadow">{hero.subtitle}</p>
      )}
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="primary" size="large" useDaisy>
          Get Free Quote
        </Button>
        <Button href="tel:6126550648" variant="secondary" size="large" useDaisy>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          612-655-0648
        </Button>
      </div>
      
      <div class="absolute bottom-6 left-1/2 -translate-x-1/2 animate-bounce">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-base-100 opacity-80" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes slowZoom {
    0% { transform: scale(1.1); }
    100% { transform: scale(1.15); }
  }
  
  .hero {
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    animation: slowZoom 20s ease-in-out infinite alternate;
  }
</style>