---
import Button from '../common/Button.astro';

export interface Props {
  title: string;
  description: string;
  backgroundImage?: string;
}

const { title, description, backgroundImage = '/images/gallery/img-7575-optimized.jpg' } = Astro.props;
---

<div class="hero min-h-[400px] relative" style={`background-image: url(${backgroundImage});`}>
  <div class="hero-overlay bg-gradient-to-r from-secondary/95 to-primary/90"></div>
  <div class="hero-content text-center text-neutral-content py-16">
    <div class="max-w-3xl">
      <h2 class="mb-5 text-4xl md:text-5xl font-bold drop-shadow-lg">{title}</h2>
      <p class="mb-8 text-xl opacity-95 drop-shadow">{description}</p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <Button href="/contact" variant="primary" size="lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Get Your Free Quote
        </Button>
        <Button href="tel:6126550648" variant="secondary" size="lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call 612-655-0648
        </Button>
      </div>
      
      <div class="stats stats-vertical sm:stats-horizontal bg-base-100/10 backdrop-blur-sm text-neutral-content">
        <div class="stat place-items-center">
          <div class="stat-figure">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="stat-title text-neutral-content/80">Service</div>
          <div class="stat-value text-2xl">24/7</div>
          <div class="stat-desc text-neutral-content/70">Emergency</div>
        </div>
        
        <div class="stat place-items-center">
          <div class="stat-figure">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <div class="stat-title text-neutral-content/80">Licensed</div>
          <div class="stat-value text-2xl">100%</div>
          <div class="stat-desc text-neutral-content/70">Insured</div>
        </div>
        
        <div class="stat place-items-center">
          <div class="stat-figure">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
          </div>
          <div class="stat-title text-neutral-content/80">Experience</div>
          <div class="stat-value text-2xl">60+</div>
          <div class="stat-desc text-neutral-content/70">Years</div>
        </div>
      </div>
    </div>
  </div>
</div>