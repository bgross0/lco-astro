---
import heroData from '../../content/homepage/hero.json';
import contentData from '../../content/homepage/content.json';
import settings from '../../data/settings.json';
---

<div class="hero min-h-screen bg-gradient-to-br from-primary/5 via-base-100 to-secondary/5">
  <div class="hero-content flex-col lg:flex-row-reverse max-w-7xl">
    <!-- Carousel -->
    <div class="carousel w-full max-w-md rounded-box shadow-2xl overflow-hidden h-64 md:h-80">
      {heroData.images.map((image, index) => (
        <div id={`slide${index + 1}`} class="carousel-item relative w-full h-full">
          <img src={image.src} alt={image.alt} class="w-full h-full object-cover" />
          <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
            <a href={`#slide${index === 0 ? heroData.images.length : index}`} class="btn btn-circle btn-sm">❮</a>
            <a href={`#slide${index === heroData.images.length - 1 ? 1 : index + 2}`} class="btn btn-circle btn-sm">❯</a>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Content -->
    <div>
      <img src={settings.logo} alt={heroData.title} class="h-24 mx-auto lg:mx-0 mb-6 drop-shadow-lg" />
      <h1 class="text-5xl font-bold mb-4">Lake County Outdoors</h1>
      <p class="text-xl py-6 text-base-content/80 max-w-lg">{heroData.description}</p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a href={heroData.ctaLink} class="btn btn-primary btn-lg">
          {heroData.ctaText}
        </a>
        <a href="tel:6126550648" class="btn btn-secondary btn-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call 612-655-0648
        </a>
      </div>
      
      <!-- Stats -->
      <div class="stats shadow-lg mt-8 bg-base-100">
        <div class="stat">
          <div class="stat-figure text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7a4 4 0 11-8 0 4 4 0 018 0zM9 14a6 6 0 00-6 6v1h12v-1a6 6 0 00-6-6zM21 12h-6" />
            </svg>
          </div>
          <div class="stat-title">Years</div>
          <div class="stat-value text-primary">60+</div>
        </div>
        
        <div class="stat">
          <div class="stat-figure text-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="stat-title">Service</div>
          <div class="stat-value text-secondary">24/7</div>
        </div>
      </div>
    </div>
  </div>
</div>