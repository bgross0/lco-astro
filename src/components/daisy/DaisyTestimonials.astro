---
const testimonials = [
  {
    name: "John Anderson",
    role: "Property Manager",
    content: "Lake County Outdoors has been our go-to for snow removal for 5 years. Their reliability and professionalism are unmatched.",
    rating: 5
  },
  {
    name: "Sarah Mitchell",
    role: "Homeowner",
    content: "The landscaping work they did transformed our property. Attention to detail and excellent communication throughout the project.",
    rating: 5
  },
  {
    name: "Mike Thompson",
    role: "Business Owner",
    content: "24/7 emergency snow removal service has saved us countless times. They're always there when we need them most.",
    rating: 5
  }
];
---

<section class="py-20 bg-gradient-to-b from-base-200 to-base-100">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-5xl font-bold text-primary mb-4">What Our Clients Say</h2>
      <p class="text-xl text-base-content/70 max-w-2xl mx-auto">Trusted by homeowners and businesses across Lake County</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="card bg-gradient-to-br from-base-100 to-base-200 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
          <div class="card-body">
            <!-- Rating -->
            <div class="rating rating-md mb-4">
              {[...Array(5)].map((_, i) => (
                <input type="radio" name={`rating-${testimonial.name}`} class="mask mask-star-2 bg-warning" checked={i === testimonial.rating - 1} disabled />
              ))}
            </div>
            
            <!-- Content -->
            <p class="text-base-content/80 italic mb-4">"{testimonial.content}"</p>
            
            <!-- Author -->
            <div class="flex items-center gap-4">
              <div class="avatar placeholder">
                <div class="bg-primary text-primary-content rounded-full w-12">
                  <span class="text-xl">{testimonial.name.split(' ').map(n => n[0]).join('')}</span>
                </div>
              </div>
              <div>
                <h4 class="font-semibold">{testimonial.name}</h4>
                <p class="text-sm text-base-content/60">{testimonial.role}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Google Reviews Integration -->
    <div class="mt-12 text-center">
      <div class="inline-flex items-center gap-6 bg-gradient-to-r from-white to-base-100 rounded-2xl p-8 shadow-2xl border border-base-200">
        <img src="/images/google-logo.svg" alt="Google" class="h-10" />
        <div class="text-left">
          <div class="flex items-center gap-2">
            <span class="text-2xl font-bold">4.9</span>
            <div class="rating rating-sm">
              {[...Array(5)].map(() => (
                <input type="radio" class="mask mask-star-2 bg-warning" checked disabled />
              ))}
            </div>
          </div>
          <p class="text-sm text-base-content/60">Based on 127 Google Reviews</p>
        </div>
        <a href="#" class="btn btn-primary">
          View All Reviews
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>