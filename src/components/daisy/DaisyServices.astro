---
import { getCollection } from 'astro:content';

// Get all services from the content collection
const servicesCollection = await getCollection('services');

// Sort by order field if it exists, otherwise alphabetically
const services = servicesCollection
  .sort((a, b) => {
    const orderA = a.data.order ?? 999;
    const orderB = b.data.order ?? 999;
    if (orderA !== orderB) return orderA - orderB;
    return a.data.title.localeCompare(b.data.title);
  })
  .map(service => ({
    title: service.data.title,
    description: service.data.description,
    image: service.data.image,
    href: `/services/${service.slug}`,
    icon: service.slug.includes('snow') || service.slug.includes('ice') ? 'snowflake' : 
          service.slug.includes('landscap') ? 'tree' : 
          service.slug.includes('municipal') ? 'building' : 'wrench'
  }));
---

<section class="py-20 bg-base-200">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-primary mb-4">Our Services</h2>
      <p class="text-xl text-base-content/70">Professional outdoor services for every season</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service) => (
        <div class="card bg-base-100 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 overflow-hidden">
          <figure class="h-56 bg-gradient-to-br from-base-200 to-base-300 overflow-hidden">
            <img src={service.image} alt={service.title} class="w-full h-full object-cover" />
          </figure>
          <div class="card-body">
            <div class="badge badge-primary badge-outline mb-2">
              {service.icon === 'snowflake' && '‚ùÑÔ∏è Winter'}
              {service.icon === 'tree' && 'üå≥ Landscaping'}
              {service.icon === 'building' && 'üèõÔ∏è Municipal'}
              {service.icon === 'wrench' && 'üîß Equipment'}
            </div>
            <h3 class="card-title text-xl">{service.title}</h3>
            <p class="text-base text-base-content/70 line-clamp-3">{service.description}</p>
            <div class="card-actions justify-end mt-4">
              <a href={service.href} class="btn btn-primary btn-sm gap-2">
                Learn More
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>