---
const phoneNumber = '612-655-0648';
const phoneLink = `tel:${phoneNumber.replace(/-/g, '')}`;
---

<div class="phone-cta">
  <span class="phone-cta__text">Call</span>
  <a href={phoneLink} class="phone-cta__link">
    <svg class="phone-cta__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <span class="phone-cta__number">{phoneNumber}</span>
  </a>
  <span class="phone-cta__text">TODAY!</span>
</div>

<style>
  .phone-cta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
  }
  
  .phone-cta__text {
    color: var(--white);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .phone-cta__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-1) var(--space-3);
    background-color: var(--warning);
    color: var(--white);
    text-decoration: none;
    font-weight: 700;
    border-radius: var(--radius-full);
    transition: all var(--transition-fast);
  }
  
  .phone-cta__link:hover {
    background-color: var(--white);
    color: var(--warning);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
    text-decoration: none;
  }
  
  .phone-cta__icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }
  
  .phone-cta__number {
    font-size: var(--text-base);
    letter-spacing: 0.02em;
  }
  
  @media (min-width: 768px) {
    .phone-cta {
      font-size: var(--text-base);
    }
    
    .phone-cta__link {
      padding: var(--space-2) var(--space-4);
    }
    
    .phone-cta__icon {
      width: 18px;
      height: 18px;
    }
  }
</style>