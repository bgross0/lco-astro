---
import Icon from '../common/Icon.astro';
import settings from '../../data/settings.json';
import navigation from '../../content/homepage/navigation.json';

const currentYear = new Date().getFullYear();

// Use footer links from navigation config
const services = navigation.footerLinks;

// Use contact info from settings
const contact = {
  phone: settings.phone,
  email: settings.email,
  address: settings.address
};
---

<footer class="footer">
  <div class="container">
    <div class="footer__content">
      <!-- Company Info -->
      <div class="footer__section">
        <div class="footer__logo-wrapper">
          <img src={settings.logo} alt={settings.site_title} class="footer__logo" />
        </div>
        <p class="footer__description">
          {settings.site_description}
        </p>
      </div>
      
      <!-- Services -->
      <div class="footer__section">
        <h4 class="footer__heading">Our Services</h4>
        <ul class="footer__list">
          {services.map((service) => (
            <li class="footer__item">
              <a href={service.href} class="footer__link">{service.label}</a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div class="footer__section">
        <h4 class="footer__heading">Contact Us</h4>
        <div class="footer__contact">
          <a href={`tel:${contact.phone.replace(/-/g, '')}`} class="footer__contact-link">
            <Icon name="phone" size={16} />
            {contact.phone}
          </a>
          <a href={`mailto:${contact.email}`} class="footer__contact-link">
            <Icon name="envelope" size={16} />
            {contact.email}
          </a>
          <div class="footer__contact-link">
            <Icon name="map-pin" size={16} />
            {contact.address}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {currentYear} {settings.site_title}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--secondary);
    color: var(--white);
    padding-top: var(--space-16);
    padding-bottom: var(--space-8);
    margin-top: auto;
  }
  
  .footer__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
    margin-bottom: var(--space-12);
  }
  
  @media (min-width: 768px) {
    .footer__content {
      grid-template-columns: 2fr 1fr 1fr;
      gap: var(--space-12);
    }
    
    .footer__section:first-child {
      text-align: left;
    }
  }
  
  /* Sections */
  .footer__section {
    max-width: 400px;
  }
  
  .footer__section:first-child {
    text-align: center;
  }
  
  .footer__logo-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 108px;
    height: 108px;
    background-color: rgba(255, 255, 255, 0.15);
    border-radius: 50%;
    margin: 0 auto var(--space-6);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    padding: 4px;
  }
  
  .footer__logo {
    height: 100px;
    width: auto;
    opacity: 0.95;
  }
  
  .footer__heading {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--white);
    margin-bottom: var(--space-4);
  }
  
  .footer__description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
  }
  
  /* Lists */
  .footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer__item {
    margin-bottom: var(--space-2);
  }
  
  .footer__link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .footer__link:hover {
    color: var(--white);
    text-decoration: underline;
  }
  
  /* Contact */
  .footer__contact {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
  
  .footer__contact-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .footer__contact-link:hover {
    color: var(--white);
  }
  
  .footer__contact-link svg {
    flex-shrink: 0;
  }
  
  /* Bottom Bar */
  .footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: var(--space-6);
    text-align: center;
  }
  
  .footer__copyright {
    color: rgba(255, 255, 255, 0.6);
    font-size: var(--text-sm);
    margin: 0;
  }
  
  /* Responsive adjustments */
  @media (max-width: 767px) {
    .footer__content {
      text-align: center;
    }
    
    .footer__section {
      margin: 0 auto;
    }
    
    .footer__logo-wrapper {
      width: 88px;
      height: 88px;
    }
    
    .footer__logo {
      height: 80px;
    }
  }
  
  @media (min-width: 1024px) {
    .footer__logo-wrapper {
      width: 124px;
      height: 124px;
    }
    
    .footer__logo {
      height: 116px;
    }
  }
</style>