---
import { getSettings, getPhone, getPhoneLink, getEmail, getAddress } from '../../lib/settings.js';

const settings = getSettings();
const phone = getPhone();
const phoneLink = getPhoneLink();
const email = getEmail();
const address = getAddress();

const currentYear = new Date().getFullYear();

const services = [
  { label: 'Commercial Snow Removal', href: '/services/commercial-snow-removal' },
  { label: 'Landscaping', href: '/services/landscaping' },
  { label: 'Municipal Contracting', href: '/services/municipal-contracting' },
  { label: 'Ice Management', href: '/services/ice-management' },
];

const quickLinks = [
  { label: 'About Us', href: '/#about' },
  { label: 'Our Equipment', href: '/#equipment' },
  { label: 'Testimonials', href: '/#testimonials' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '/contact' },
];
---

<footer class="bg-gray-900 text-white">
  <!-- Main footer content -->
  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company info -->
      <div>
        <picture>
          <source srcset="/lco-final.webp" type="image/webp" />
          <img src="/lco-final.png" alt="Lake County Outdoors" class="h-12 w-auto mb-4 brightness-0 invert" />
        </picture>
        <p class="text-gray-400 mb-4">
          Professional outdoor services including commercial snow removal, landscaping, and municipal contracting.
        </p>
        <div class="flex space-x-4">
          {settings.social?.facebook && (
            <a href={settings.social.facebook} class="text-gray-400 hover:text-white transition-colors" aria-label="Facebook">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          )}
          {settings.social?.instagram && (
            <a href={settings.social.instagram} class="text-gray-400 hover:text-white transition-colors" aria-label="Instagram">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
              </svg>
            </a>
          )}
          {settings.social?.linkedin && (
            <a href={settings.social.linkedin} class="text-gray-400 hover:text-white transition-colors" aria-label="LinkedIn">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Our Services</h3>
        <ul class="space-y-2">
          {services.map((service) => (
            <li>
              <a 
                href={service.href} 
                class="text-gray-400 hover:text-white transition-colors"
                data-astro-prefetch
              >
                {service.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Quick links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-gray-400 hover:text-white transition-colors"
                data-astro-prefetch
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact info -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact Us</h3>
        <div class="space-y-3">
          <a href={phoneLink} class="flex items-center text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            {phone}
          </a>
          
          <a href={`mailto:${email}`} class="flex items-center text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            {email}
          </a>
          
          <div class="flex items-start text-gray-400">
            <svg class="w-5 h-5 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{address}</span>
          </div>
        </div>

        <!-- Emergency service badge -->
        <div class="mt-6 p-3 bg-red-900/20 border border-red-800 rounded-lg">
          <div class="flex items-center text-red-400">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm font-medium">24/7 Emergency Service</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-gray-800">
    <div class="container mx-auto px-4 py-6">
      <div class="md:flex md:items-center md:justify-between">
        <div class="text-sm text-gray-400">
          Â© {currentYear} Lake County Outdoors, LLC. All rights reserved.
        </div>
        <div class="mt-4 md:mt-0">
          <ul class="flex space-x-6 text-sm">
            <li>
              <a href="/privacy" class="text-gray-400 hover:text-white transition-colors">
                Privacy Policy
              </a>
            </li>
            <li>
              <a href="/terms" class="text-gray-400 hover:text-white transition-colors">
                Terms of Service
              </a>
            </li>
            <li>
              <a href="/admin" class="text-gray-400 hover:text-white transition-colors">
                Admin
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
