---
import { getEntry } from 'astro:content';

const homepage = await getEntry('homepage', 'content');
const { about } = homepage.data;

const iconPaths = {
  check: 'M5 13l4 4L19 7',
  star: 'M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z',
  shield: 'M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z',
  clock: 'M12 2a10 10 0 100 20 10 10 0 000-20zm0 18a8 8 0 110-16 8 8 0 010 16zm1-13h-2v6l5.25 3.15.75-1.23-4-2.42V7z'
};
---

<section class="py-20 bg-gradient-to-br from-gray-50 to-white relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 left-10 w-72 h-72 bg-primary-500 rounded-full filter blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-secondary-500 rounded-full filter blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="animate-fade-in">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {about.title}
        </h2>
        
        {about.paragraphs.map((paragraph) => (
          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            {paragraph}
          </p>
        ))}
        
        <!-- Features grid -->
        <div class="grid sm:grid-cols-2 gap-4 mt-8">
          {about.features.map((feature, index) => (
            <div 
              class="flex items-center space-x-3 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow animate-slide-up"
              style={`animation-delay: ${index * 100}ms`}
            >
              <div class="flex-shrink-0 w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[feature.icon] || iconPaths.check}></path>
                </svg>
              </div>
              <span class="text-gray-700 font-medium">{feature.text}</span>
            </div>
          ))}
        </div>

        <!-- CTA -->
        <div class="mt-10">
          <a 
            href="/contact"
            class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transform hover:scale-105 transition-all duration-200 shadow-lg"
            data-astro-prefetch
          >
            Get Your Free Quote
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Image collage -->
      <div class="relative h-[600px] animate-slide-up">
        <div class="absolute inset-0 grid grid-cols-2 gap-4">
          <div class="space-y-4">
            <div class="h-48 bg-gradient-to-br from-primary-400 to-primary-600 rounded-2xl overflow-hidden shadow-xl">
              <picture>
                <source
                  type="image/webp"
                  srcset="/images/gallery/img-7114-400w.webp 400w, /images/gallery/img-7114-800w.webp 800w, /images/gallery/img-7114-optimized.webp 1200w"
                  sizes="(max-width: 768px) 100vw, 25vw"
                />
                <img
                  src="/images/gallery/img-7114-1920w.jpg"
                  alt="Equipment"
                  class="w-full h-full object-cover mix-blend-overlay opacity-70"
                  loading="lazy"
                  width="600"
                  height="287"
                />
              </picture>
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-white text-center">
                  <div class="text-4xl font-bold">32+</div>
                  <div class="text-sm">Equipment Fleet</div>
                </div>
              </div>
            </div>
            <div class="h-64 bg-gradient-to-br from-secondary-400 to-secondary-600 rounded-2xl overflow-hidden shadow-xl">
              <picture>
                <source
                  type="image/webp"
                  srcset="/images/gallery/img-7116-400w.webp 400w, /images/gallery/img-7116-800w.webp 800w, /images/gallery/img-7116-optimized.webp 1200w"
                  sizes="(max-width: 768px) 100vw, 25vw"
                />
                <img
                  src="/images/gallery/img-7116-1920w.jpg"
                  alt="Landscaping"
                  class="w-full h-full object-cover mix-blend-overlay opacity-70"
                  loading="lazy"
                  width="600"
                  height="600"
                />
              </picture>
            </div>
          </div>
          <div class="space-y-4 pt-8">
            <div class="h-64 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-2xl overflow-hidden shadow-xl">
              <picture>
                <source
                  type="image/webp"
                  srcset="/images/gallery/img-7680-400w.webp 400w, /images/gallery/img-7680-800w.webp 800w, /images/gallery/img-7680-optimized.webp 1200w"
                  sizes="(max-width: 768px) 100vw, 25vw"
                />
                <img
                  src="/images/gallery/img-7680-1920w.jpg"
                  alt="Snow removal"
                  class="w-full h-full object-cover mix-blend-overlay opacity-70"
                  width="600"
                  height="300"
                  loading="lazy"
                />
              </picture>
            </div>
            <div class="h-48 bg-gradient-to-br from-gray-600 to-gray-800 rounded-2xl flex items-center justify-center shadow-xl">
              <div class="text-white text-center">
                <div class="text-5xl font-bold">60+</div>
                <div class="text-lg">Years Combined Experience</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>