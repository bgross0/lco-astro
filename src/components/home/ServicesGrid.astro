---
import { getCollection } from 'astro:content';
import ServiceCard from '../services/ServiceCard.astro';

// Get all services from the content collection
const servicesCollection = await getCollection('services');

// Sort by order field if it exists, otherwise alphabetically
const services = servicesCollection
  .sort((a, b) => {
    const orderA = a.data.order ?? 999;
    const orderB = b.data.order ?? 999;
    if (orderA !== orderB) return orderA - orderB;
    return a.data.title.localeCompare(b.data.title);
  })
  .map(service => ({
    title: service.data.title,
    description: service.data.description,
    image: service.data.image,
    href: `/services/${service.slug}`,
    icon: service.slug.includes('snow') || service.slug.includes('ice') ? 'snowflake' : 
          service.slug.includes('landscap') ? 'tree' : 'building'
  }));
---

<section class="services-grid">
  <div class="container">
    <div class="services-grid__header">
      <h2 class="services-grid__title">Our Services</h2>
      <p class="services-grid__subtitle">
        Professional outdoor services you can count on, year-round
      </p>
    </div>
    
    <div class="services-grid__grid">
      {services.map((service) => (
        <ServiceCard {...service} />
      ))}
    </div>
  </div>
</section>

<style>
  .services-grid {
    background-color: var(--neutral-light);
    padding: var(--space-12) 0;
  }
  
  .services-grid__header {
    text-align: center;
    margin-bottom: var(--space-12);
  }
  
  .services-grid__title {
    color: var(--primary);
    margin-bottom: var(--space-4);
  }
  
  .services-grid__subtitle {
    font-size: var(--text-lg);
    color: var(--neutral-dark);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .services-grid__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    padding: 0 var(--space-4);
  }
  
  @media (max-width: 640px) {
    .services-grid__grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
      padding: 0 var(--space-2);
    }
  }
  
  @media (min-width: 768px) {
    .services-grid {
      padding: var(--space-16) 0;
    }
    
    .services-grid__grid {
      grid-template-columns: repeat(2, 1fr);
      padding: 0 var(--space-6);
    }
  }
  
  @media (min-width: 1024px) {
    .services-grid__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-8);
      padding: 0;
    }
  }
  
  @media (min-width: 1024px) {
    .services-grid {
      padding: var(--space-20) 0;
    }
    
    .services-grid__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-6);
    }
  }
</style>