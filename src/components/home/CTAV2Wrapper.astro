---
import { getEntry } from 'astro:content';
import { CTAV2 } from './CTAV2';

const homepage = await getEntry('homepage', 'content');
const { cta } = homepage.data;

const ctaData = {
  headline: cta?.headline || "Ready to Transform Your Property?",
  subheadline: cta?.subheadline || "Get a free consultation and quote today",
  buttonText: cta?.buttonText || "Get Free Quote",
  buttonLink: cta?.buttonLink || "/contact",
  secondaryButtonText: cta?.secondaryButtonText || "Call Now",
  secondaryButtonLink: cta?.secondaryButtonLink || "tel:+1234567890",
  features: cta?.features || [
    "Free Consultation",
    "24/7 Emergency Service",
    "Licensed & Insured",
    "Satisfaction Guaranteed"
  ]
};
---

<CTAV2 cta={ctaData} client:visible />