---
import contentData from '../../content/homepage/content.json';
import GoogleReviews from './GoogleReviews.astro';

const { clientSatisfaction } = contentData;
---

<section class="client-satisfaction">
  <div class="container">
    <div class="satisfaction__content">
      <h2 class="satisfaction__title">{clientSatisfaction.title}</h2>
      
      <div class="satisfaction__text-group">
        {clientSatisfaction.paragraphs.map((paragraph) => (
          <p class="satisfaction__text">
            {paragraph}
          </p>
        ))}
      </div>
      
      <div class="satisfaction__experience">
        <h3 class="satisfaction__subtitle">{clientSatisfaction.experienceTitle}</h3>
        <p class="satisfaction__text">
          {clientSatisfaction.experienceText}
        </p>
        <p class="satisfaction__highlight">
          {clientSatisfaction.highlight}
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Google Reviews Section -->
<GoogleReviews />

<style>
  .client-satisfaction {
    background-color: var(--white);
    padding: var(--space-12) 0;
  }
  
  .satisfaction__content {
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .satisfaction__title {
    text-align: center;
    color: var(--primary);
    margin-bottom: var(--space-8);
    font-size: var(--text-4xl);
  }
  
  .satisfaction__text-group {
    margin-bottom: var(--space-12);
  }
  
  .satisfaction__text {
    font-size: var(--text-lg);
    color: var(--neutral-dark);
    line-height: 1.7;
    margin-bottom: var(--space-4);
    text-align: center;
  }
  
  .satisfaction__experience {
    background-color: var(--neutral-light);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    text-align: center;
  }
  
  .satisfaction__subtitle {
    color: var(--secondary);
    margin-bottom: var(--space-4);
    font-size: var(--text-2xl);
  }
  
  .satisfaction__highlight {
    font-size: var(--text-xl);
    color: var(--primary);
    font-weight: var(--font-semibold);
    margin-top: var(--space-4);
  }
  
  @media (min-width: 768px) {
    .client-satisfaction {
      padding: var(--space-16) 0;
    }
    
    .satisfaction__text {
      text-align: left;
    }
    
    .satisfaction__experience {
      text-align: left;
    }
  }
  
  @media (min-width: 1024px) {
    .client-satisfaction {
      padding: var(--space-20) 0;
    }
  }
</style>