---
export interface Props {
  name: string;
  size?: number;
  weight?: 'thin' | 'light' | 'regular' | 'bold' | 'fill';
  color?: string;
  class?: string;
}

const { name, size = 24, weight = 'regular', color = 'currentColor', class: className = '' } = Astro.props;

// Phosphor icons use specific class names
const weightClass = weight !== 'regular' ? `-${weight}` : '';
const iconClass = `ph-${name}${weightClass}`;
---

<i 
  class={`ph ${iconClass} ${className}`} 
  style={`font-size: ${size}px; color: ${color};`}
  aria-hidden="true"
></i>

<style is:global>
  /* Self-hosted Phosphor Icons for faster load */
  @import url('/assets/phosphor-icons.css');
</style>

<script>
  // Phosphor Icons CSS is now self-hosted - no external JS needed
  // Icons render via CSS @font-face in /assets/phosphor-icons.css
</script>