---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ServiceHero from '../../components/services/ServiceHero.astro';
import ServiceFeatures from '../../components/services/ServiceFeatures.astro';
import ServicePricing from '../../components/services/ServicePricing.astro';
import ServiceEquipment from '../../components/services/ServiceEquipment.astro';
import ServiceProcess from '../../components/services/ServiceProcess.astro';
import ServiceFAQ from '../../components/services/ServiceFAQ.astro';
import ServiceCTA from '../../components/services/ServiceCTA.astro';
import Button from '../../components/common/Button.astro';
import Icon from '../../components/common/Icon.astro';

// Example data structure for Commercial Snow Removal
const serviceData = {
  title: "Commercial Snow Removal",
  description: "Professional snow and ice management for commercial properties. 24/7 emergency service available.",
  hero: {
    title: "Professional Commercial Snow Removal Services",
    subtitle: "Keep Your Business Accessible All Winter Long",
    backgroundImage: "/images/snow-removal/snow-removal-hero-600x300.jpg",
    badges: ["24/7 Emergency", "Licensed & Insured", "60+ Years Experience"]
  },
  features: [
    {
      icon: "snowflake",
      title: "Snow Plowing",
      description: "Professional plowing services for parking lots, driveways, and access roads. Multiple trigger level options available."
    },
    {
      icon: "cube",
      title: "Ice Management",
      description: "Complete ice control with traditional salt or eco-friendly liquid brine solutions. Pre-treatment and de-icing services available."
    },
    {
      icon: "truck",
      title: "Snow Hauling",
      description: "When snow piles up, we haul it away. Rates starting at $115/hour for smaller equipment, $125/hour for standard equipment."
    },
    {
      icon: "lightning",
      title: "24/7 Emergency Service",
      description: "Round-the-clock emergency response when you need it most. We're here when other contractors can't keep up."
    },
    {
      icon: "check-circle",
      title: "Sidewalk Clearing",
      description: "Complete sidewalk and walkway maintenance to ensure safe pedestrian access to your business."
    },
    {
      icon: "file-text",
      title: "Service Documentation",
      description: "Detailed service logs and documentation for liability protection and record keeping."
    }
  ],
  pricing: [
    {
      title: "Per Push",
      price: "Starting at $75",
      description: "Pay only when it snows. Perfect for mild winters with flexible trigger levels.",
      features: [
        "Zero tolerance, 1\", or 2\" triggers",
        "No monthly fees",
        "Pay per service",
        "Best for light winters"
      ],
      featured: false
    },
    {
      title: "Monthly Flat Rate",
      price: "Custom Quote",
      description: "Predictable budgeting with unlimited snow events. Includes priority service.",
      features: [
        "Unlimited snow events",
        "Priority service",
        "Ice management included",
        "Budget certainty",
        "24/7 emergency response"
      ],
      featured: true,
      badge: "Most Popular"
    },
    {
      title: "Per Snowfall",
      price: "Starting at $150",
      description: "One price per snow event regardless of accumulation.",
      features: [
        "Fixed price per event",
        "Return visits included",
        "2-6\" accumulation",
        "Great for moderate winters"
      ],
      featured: false
    }
  ],
  equipment: [
    { number: 10, label: "Plow Trucks", icon: "truck" },
    { number: 14, label: "Bobcats", icon: "truck" },
    { number: 6, label: "Wheel Loaders", icon: "truck" },
    { number: 2, label: "Tri-Axle Dumps", icon: "truck" }
  ],
  process: [
    {
      step: 1,
      title: "Initial Consultation",
      description: "We assess your property and discuss your specific snow removal needs and requirements."
    },
    {
      step: 2,
      title: "Custom Proposal",
      description: "Receive a detailed proposal with service levels, pricing options, and contract terms."
    },
    {
      step: 3,
      title: "Contract Signing",
      description: "Review and sign your service agreement before the winter season begins."
    },
    {
      step: 4,
      title: "Pre-Season Prep",
      description: "We mark your property, identify priority areas, and prepare our equipment."
    },
    {
      step: 5,
      title: "Active Monitoring",
      description: "Our team monitors weather 24/7 and deploys crews based on your trigger levels."
    },
    {
      step: 6,
      title: "Service & Documentation",
      description: "Complete service with detailed logs and photos for your records."
    }
  ],
  faqs: [
    {
      question: "What are trigger levels?",
      answer: "Trigger levels determine when we begin snow removal. Options include zero tolerance (any accumulation), 1 inch, or 2 inches. You choose based on your needs and budget."
    },
    {
      question: "Do you provide ice management services?",
      answer: "Yes! We offer complete ice management including pre-treatment with liquid brine, traditional rock salt application, and eco-friendly alternatives."
    },
    {
      question: "What areas do you service?",
      answer: "We service all of Lake County and surrounding areas. Our fleet allows us to handle properties from small lots to large commercial complexes."
    },
    {
      question: "How quickly can you respond to emergency calls?",
      answer: "Our 24/7 emergency response team typically arrives within 1-2 hours of your call, weather permitting."
    },
    {
      question: "Do you offer seasonal contracts?",
      answer: "Yes, we offer seasonal contracts with various pricing structures to fit your budget and needs. Contact us for a custom quote."
    },
    {
      question: "What happens if my regular contractor can't keep up?",
      answer: "We're here to help! We offer emergency services and can often accommodate new clients mid-season when other contractors fail to deliver."
    }
