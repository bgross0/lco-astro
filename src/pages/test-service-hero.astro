<style>
  .test-container {
    padding: 2rem;
    max-width: 1600px;
    margin: 0 auto;
  }

  .test-title {
    font-size: 2.5rem;
    color: #2E5A87;
    margin-bottom: 1rem;
    text-align: center;
  }

  .test-description {
    text-align: center;
    color: #6b7280;
    font-size: 1.125rem;
    margin-bottom: 3rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .test-section {
    margin-bottom: 2rem;
  }

  .version-title {
    font-size: 2rem;
    color: #2E5A87;
    margin: 3rem 0 2rem;
    padding: 1.5rem;
    background: linear-gradient(to right, #f0f9ff, #ffffff);
    border-left: 6px solid #2E5A87;
    font-weight: 600;
  }

  .section-title {
    font-size: 1.75rem;
    color: #4A90E2;
    margin-bottom: 2rem;
    padding: 1rem;
    background: #f8f9fa;
    border-left: 4px solid #4A90E2;
  }

  .divider {
    height: 2px;
    background: linear-gradient(90deg, transparent, #e5e7eb, transparent);
    margin: 4rem 0;
  }

  .features-section {
    margin-top: 4rem;
    padding: 3rem;
    background: #f8f9fa;
    border-radius: 1rem;
  }

  .features-title {
    font-size: 2rem;
    color: #2E5A87;
    margin-bottom: 2rem;
    text-align: center;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    background: white;
    padding: 1.5rem;
    border-radius: 0.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .feature-card h3 {
    color: #4A90E2;
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }

  .feature-card ul {
    list-style: none;
    padding: 0;
  }

  .feature-card li {
    padding: 0.5rem 0;
    color: #6b7280;
    border-bottom: 1px solid #f3f4f6;
  }

  .feature-card li:last-child {
    border-bottom: none;
  }

  .notes-section {
    margin-top: 4rem;
    padding: 2rem;
    background: #fff;
    border: 2px solid #e5e7eb;
    border-radius: 1rem;
  }

  .notes-title {
    font-size: 1.75rem;
    color: #2E5A87;
    margin-bottom: 1.5rem;
  }

  .notes-content {
    color: #4b5563;
    line-height: 1.7;
  }

  .notes-content p {
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: #374151;
  }

  .notes-content ul {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .notes-content li {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .test-container {
      padding: 1rem;
    }

    .test-title {
      font-size: 2rem;
    }

    .features-section {
      padding: 1.5rem;
    }

    .feature-card {
      padding: 1rem;
    }
  }
</style>