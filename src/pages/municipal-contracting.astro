---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/common/Button.astro';

const pageTitle = "Municipal Contracting - Lake County Outdoors, LLC";
const pageDescription = "Municipal contracting services including concrete construction, asphalt repairs, land clearing, and more. Fast, competitive bids with expert craftsmanship.";

const services = [
  {
    title: "Concrete Construction and Demolition",
    description: "Full-service concrete work including new construction, repairs, and complete demolition. We handle sidewalks, curbs, foundations, and infrastructure projects with precision.",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
      <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
      <line x1="12" y1="22.08" x2="12" y2="12"></line>
    </svg>`
  },
  {
    title: "Medians and Barriers",
    description: "Professional installation and maintenance of traffic medians, safety barriers, and dividers. Ensuring public safety with durable, regulation-compliant solutions.",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
    </svg>`
  },
  {
    title: "Asphalt Repairs",
    description: "Comprehensive asphalt maintenance including pothole repair, crack sealing, patching, and resurfacing. Extending pavement life and improving safety.",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
      <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
      <path d="M9 14h6"></path>
      <path d="M9 18h6"></path>
    </svg>`
  },
  {
    title: "Lane Striping",
    description: "Precision road marking and lane striping services using high-quality, long-lasting materials. Ensuring clear traffic guidance and regulatory compliance.",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="5" y1="12" x2="19" y2="12"></line>
      <line x1="5" y1="6" x2="19" y2="6"></line>
      <line x1="5" y1="18" x2="19" y2="18"></line>
    </svg>`
  },
  {
    title: "Landscape Construction",
    description: "Municipal landscaping projects including parks, medians, and public spaces. Creating attractive, maintainable green spaces for communities.",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M12 2v20"></path>
      <path d="M2 12h20"></path>
      <path d="M6 6l12 12"></path>
      <path d="M18 6L6 18"></path>
      <circle cx="12" cy="12" r="2"></circle>
    </svg>`
  },
  {
    title: "Pavement Stripping and Repave",
    description: "Complete pavement rehabilitation services from removal to new installation. Ensuring smooth, durable surfaces built to withstand heavy traffic.",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <rect x="3" y="11" width="18" height="10" rx="2" ry="2"></rect>
      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
      <path d="M5 11V7"></path>
      <path d="M19 11V7"></path>
    </svg>`
  },
  {
    title: "Land Clearing and Tree Removal",
    description: "Efficient clearing services for development projects, right-of-way maintenance, and hazard mitigation. Safe, environmentally responsible practices.",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="20 6 9 17 4 12"></polyline>
      <path d="M22 2L2 22"></path>
    </svg>`
  }
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero__background">
      <div class="hero__overlay"></div>
    </div>
    
    <div class="container">
      <div class="hero__content">
        <h1 class="hero__title">Municipal Contracting</h1>
        <p class="hero__subtitle">
          Trusted Partner for Government Infrastructure Projects
        </p>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="intro">
    <div class="container">
      <div class="intro__content">
        <h2 class="intro__title">Your Reliable Municipal Contractor</h2>
        <p class="intro__description">
          Lake County Outdoors brings decades of experience to municipal projects. From routine 
          maintenance to major infrastructure improvements, we deliver quality work on time and 
          within budget. Our team understands the unique requirements of government contracts 
          and maintains all necessary certifications and insurance.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services">
    <div class="container">
      <div class="services__content">
        <h2 class="services__title">Services Offered:</h2>
        
        <div class="services__grid">
          {services.map((service) => (
            <div class="service-card">
              <div class="service-card__header">
                <div class="service-card__icon" set:html={service.icon}></div>
                <h3 class="service-card__title">{service.title}</h3>
              </div>
              <p class="service-card__description">{service.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Capabilities Section -->
  <section class="capabilities">
    <div class="container">
      <div class="capabilities__grid">
        <div class="capability">
          <h3 class="capability__title">Equipment & Resources</h3>
          <ul class="capability__list">
            <li>Heavy machinery fleet</li>
            <li>Specialized equipment</li>
            <li>Experienced operators</li>
            <li>Quality materials sourcing</li>
          </ul>
        </div>
        
        <div class="capability">
          <h3 class="capability__title">Compliance & Safety</h3>
          <ul class="capability__list">
            <li>Fully licensed & insured</li>
            <li>OSHA certified crews</li>
            <li>Traffic control certified</li>
            <li>Environmental compliance</li>
          </ul>
        </div>
        
        <div class="capability">
          <h3 class="capability__title">Project Management</h3>
          <ul class="capability__list">
            <li>Detailed project planning</li>
            <li>Regular progress reports</li>
            <li>Budget tracking</li>
            <li>Quality assurance</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Learn More Section -->
  <section class="learn-more">
    <div class="container">
      <div class="learn-more__content">
        <h2 class="learn-more__title">Learn More</h2>
        <p class="learn-more__description">
          Lake County Outdoors strives to provide fast, competitive bids that bring expert 
          craftsmanship and organization together.
        </p>
        
        <div class="learn-more__contact">
          <p class="learn-more__cta">
            Ready to discuss your next municipal project?
          </p>
          <p class="learn-more__phone">
            Please Call <strong>612-655-0648</strong>
          </p>
        </div>
        
        <div class="learn-more__actions">
          <Button href="tel:6126550648" variant="primary" size="large">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            Call 612-655-0648
          </Button>
          <Button href="/contact" variant="secondary" size="large">
            Request a Bid
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 50vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  
  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('/images/equipment/equipment-hero-600x300.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: -2;
  }
  
  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(46, 90, 135, 0.95) 0%,
      rgba(74, 144, 226, 0.85) 100%
    );
    z-index: -1;
  }
  
  .hero__content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: var(--white);
    padding: var(--space-8) 0;
  }
  
  .hero__title {
    font-size: clamp(var(--text-3xl), 5vw, var(--text-5xl));
    font-weight: var(--font-extrabold);
    margin: 0;
    color: var(--white);
    line-height: 1.1;
    margin-bottom: var(--space-4);
  }
  
  .hero__subtitle {
    font-size: var(--text-xl);
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Intro Section */
  .intro {
    padding: var(--space-16) 0;
    background-color: var(--neutral-light);
  }
  
  .intro__content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }
  
  .intro__title {
    font-size: var(--text-3xl);
    color: var(--primary);
    margin-bottom: var(--space-6);
  }
  
  .intro__description {
    font-size: var(--text-lg);
    color: var(--neutral-dark);
    line-height: 1.8;
  }

  /* Services Section */
  .services {
    padding: var(--space-20) 0;
    background-color: var(--white);
  }
  
  .services__content {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .services__title {
    font-size: var(--text-3xl);
    color: var(--primary);
    margin-bottom: var(--space-12);
    text-align: center;
  }
  
  .services__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-8);
  }
  
  .service-card {
    background-color: var(--neutral-light);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    border: 2px solid transparent;
  }
  
  .service-card:hover {
    transform: translateY(-4px);
    background-color: var(--white);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
  }
  
  .service-card__header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }
  
  .service-card__icon {
    width: 48px;
    height: 48px;
    color: var(--primary);
  }
  
  .service-card__icon svg {
    width: 100%;
    height: 100%;
  }
  
  .service-card__title {
    font-size: var(--text-xl);
    color: var(--primary);
    margin: 0;
    font-weight: var(--font-semibold);
  }
  
  .service-card__description {
    color: var(--neutral-dark);
    line-height: 1.6;
    margin: 0;
  }

  /* Capabilities Section */
  .capabilities {
    padding: var(--space-16) 0;
    background-color: var(--neutral-light);
  }
  
  .capabilities__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-8);
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .capability {
    background-color: var(--white);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }
  
  .capability__title {
    font-size: var(--text-xl);
    color: var(--primary);
    margin-bottom: var(--space-4);
  }
  
  .capability__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .capability__list li {
    padding: var(--space-2) 0;
    padding-left: var(--space-6);
    position: relative;
    color: var(--neutral-dark);
  }
  
  .capability__list li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--secondary);
    font-weight: var(--font-bold);
  }

  /* Learn More Section */
  .learn-more {
    padding: var(--space-20) 0;
    background-color: var(--primary);
    color: var(--white);
  }
  
  .learn-more__content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  .learn-more__title {
    font-size: var(--text-3xl);
    color: var(--white);
    margin-bottom: var(--space-6);
  }
  
  .learn-more__description {
    font-size: var(--text-xl);
    line-height: 1.6;
    margin-bottom: var(--space-8);
    opacity: 0.95;
  }
  
  .learn-more__contact {
    margin-bottom: var(--space-8);
  }
  
  .learn-more__cta {
    font-size: var(--text-lg);
    margin-bottom: var(--space-2);
    opacity: 0.9;
  }
  
  .learn-more__phone {
    font-size: var(--text-2xl);
  }
  
  .learn-more__phone strong {
    font-weight: var(--font-bold);
  }
  
  .learn-more__actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: 40vh;
    }
    
    .services__grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
    
    .service-card {
      padding: var(--space-6);
    }
    
    .service-card__header {
      flex-direction: column;
      text-align: center;
    }
    
    .capabilities__grid {
      grid-template-columns: 1fr;
    }
    
    .learn-more__actions {
      flex-direction: column;
      align-items: center;
    }
    
    .learn-more__actions > :global(*) {
      width: 100%;
      max-width: 300px;
    }
  }
</style>