---
import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/common/Icon.astro';

const title = '404 - Page Not Found | Lake County Outdoors';
const description = 'The page you are looking for could not be found. Return to our homepage or contact us for assistance.';
---

<BaseLayout title={title} description={description}>
  <section class="error-page">
    <div class="container">
      <div class="error-content">
        <h1 class="error-code">404</h1>
        <h2 class="error-title">Page Not Found</h2>
        <p class="error-description">
          Sorry, the page you're looking for doesn't exist. It may have been moved or deleted.
        </p>
        
        <div class="error-actions">
          <a href="/" class="btn btn--primary">
            <Icon name="house" size={20} />
            Return Home
          </a>
          <a href="/contact" class="btn btn--secondary">
            <Icon name="envelope" size={20} />
            Contact Us
          </a>
        </div>
        
        <div class="error-suggestions">
          <h3>Popular Pages:</h3>
          <ul class="suggestions-list">
            <li><a href="/services/commercial-snow-removal">Commercial Snow Removal</a></li>
            <li><a href="/services/landscaping">Landscaping Services</a></li>
            <li><a href="/services/municipal-contracting">Municipal Contracting</a></li>
            <li><a href="/service-areas">Service Areas</a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .error-page {
    min-height: 60vh;
    display: flex;
    align-items: center;
    padding: var(--space-16) 0;
  }
  
  .error-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .error-code {
    font-size: clamp(4rem, 10vw, 8rem);
    font-weight: 900;
    color: var(--primary);
    margin: 0;
    line-height: 1;
  }
  
  .error-title {
    font-size: var(--text-2xl);
    margin: var(--space-4) 0;
    color: var(--secondary);
  }
  
  .error-description {
    font-size: var(--text-lg);
    color: var(--gray-600);
    margin-bottom: var(--space-8);
  }
  
  .error-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    margin-bottom: var(--space-12);
  }
  
  .error-suggestions {
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid var(--gray-200);
  }
  
  .error-suggestions h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-4);
    color: var(--secondary);
  }
  
  .suggestions-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .suggestions-list li {
    margin: var(--space-2) 0;
  }
  
  .suggestions-list a {
    color: var(--primary);
    text-decoration: none;
    font-size: var(--text-base);
    transition: color 0.2s;
  }
  
  .suggestions-list a:hover {
    color: var(--primary-dark);
    text-decoration: underline;
  }
  
  @media (max-width: 640px) {
    .error-actions {
      flex-direction: column;
      align-items: stretch;
    }
  }
</style>