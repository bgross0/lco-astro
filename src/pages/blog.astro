---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort posts by date, newest first
posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title="Blog | Lake County Outdoors"
  description="Tips, insights, and updates from Lake County Outdoors on landscaping, snow removal, and property maintenance."
>
  <div class="hero">
    <div class="container">
      <h1>Our Blog</h1>
      <p>Tips, insights, and industry updates from Lake County Outdoors</p>
    </div>
  </div>

  <section class="blog-section">
    <div class="container">
      {posts.length === 0 ? (
        <p class="no-posts">No blog posts available yet. Check back soon!</p>
      ) : (
        <div class="blog-grid">
          {posts.map((post) => (
            <article class="blog-card">
              {post.data.image && (
                <div class="blog-card__image">
                  {(() => { const webp = post.data.image?.replace(/\.(jpe?g|png)$/i, '.webp'); return (
                    <picture>
                      <source srcset={webp} type="image/webp" />
                      <img src={post.data.image} alt={post.data.imageAlt || post.data.title} loading="lazy" decoding="async" />
                    </picture>
                  ); })()}
                </div>
              )}
              <div class="blog-card__content">
                <time class="blog-card__date">
                  {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <h2 class="blog-card__title">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h2>
                <p class="blog-card__description">{post.data.description}</p>
                <div class="blog-card__footer">
                  <span class="blog-card__author">By {post.data.author}</span>
                  <a href={`/blog/${post.slug}`} class="blog-card__link">
                    Read More â†’
                  </a>
                </div>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="blog-card__tags">
                    {post.data.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    padding: var(--space-20) 0 var(--space-16);
    text-align: center;
  }

  .hero h1 {
    margin-bottom: var(--space-4);
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .hero p {
    font-size: var(--text-lg);
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-section {
    padding: var(--space-16) 0;
  }

  .no-posts {
    text-align: center;
    font-size: var(--text-lg);
    color: var(--neutral-dark);
    padding: var(--space-16) 0;
  }

  .blog-grid {
    display: grid;
    gap: var(--space-8);
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }

  .blog-card {
    background: white;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
  }

  .blog-card__image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .blog-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-card__content {
    padding: var(--space-6);
  }

  .blog-card__date {
    font-size: var(--text-sm);
    color: var(--neutral-dark);
    display: block;
    margin-bottom: var(--space-2);
  }

  .blog-card__title {
    margin-bottom: var(--space-3);
    font-size: var(--text-xl);
    line-height: 1.3;
  }

  .blog-card__title a {
    color: var(--primary);
    text-decoration: none;
  }

  .blog-card__title a:hover {
    color: var(--secondary);
  }

  .blog-card__description {
    color: var(--neutral-dark);
    margin-bottom: var(--space-4);
    line-height: 1.6;
  }

  .blog-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-4);
    border-top: 1px solid var(--neutral-light);
  }

  .blog-card__author {
    font-size: var(--text-sm);
    color: var(--neutral-dark);
  }

  .blog-card__link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
    font-size: var(--text-sm);
  }

  .blog-card__link:hover {
    color: var(--secondary);
  }

  .blog-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-3);
  }

  .tag {
    background: var(--neutral-light);
    color: var(--neutral-dark);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
  }

  @media (min-width: 768px) {
    .blog-grid {
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    }
  }

  @media (min-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
