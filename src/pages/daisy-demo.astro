---
import DaisyLayout from '../layouts/DaisyLayout.astro';
import DaisyHero from '../components/daisy/DaisyHero.astro';
import DaisyServices from '../components/daisy/DaisyServices.astro';
import DaisyAbout from '../components/daisy/DaisyAbout.astro';
import DaisyTestimonials from '../components/daisy/DaisyTestimonials.astro';
import DaisyCTA from '../components/daisy/DaisyCTA.astro';

// Use the same data as homepage
import heroData from '../content/homepage/hero.json';
