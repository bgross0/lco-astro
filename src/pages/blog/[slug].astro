---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();
---

<BaseLayout
  title={`${post.data.title} | Lake County Outdoors Blog`}
  description={post.data.description}
  image={post.data.image}
>
  <article class="blog-post">
    <div class="blog-post__hero">
      {post.data.image && (() => {
        const imageName = post.data.image.split('/').pop().replace(/\.(jpe?g|png)$/i, '');
        const imageDir = post.data.image.substring(0, post.data.image.lastIndexOf('/'));
        const webp800 = `${imageDir}/${imageName}-800w.webp`;
        const webp1200 = `${imageDir}/${imageName}-1200w.webp`;
        const webpOptimized = `${imageDir}/${imageName}-optimized.webp`;
        const jpg800 = `${imageDir}/${imageName}-800w.jpg`;
        const jpgOptimized = `${imageDir}/${imageName}-optimized.jpg`;

        return (
          <picture>
            <source
              type="image/webp"
              srcset={`${webp800} 800w, ${webp1200} 1200w, ${webpOptimized} 1920w`}
              sizes="100vw"
            />
            <source
              type="image/jpeg"
              srcset={`${jpg800} 800w, ${jpgOptimized} 1200w`}
              sizes="100vw"
            />
            <img
              src={jpgOptimized}
              alt={post.data.imageAlt || post.data.title}
              class="blog-post__hero-image"
              loading="eager"
              fetchpriority="high"
              decoding="async"
              width="1200"
              height="675"
            />
          </picture>
        );
      })()}
      <div class="container">
        <div class="blog-post__header">
          <a href="/blog" class="blog-post__back">← Back to Blog</a>
          <h1 class="blog-post__title">{post.data.title}</h1>
          <div class="blog-post__meta">
            <time class="blog-post__date">
              {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            <span class="blog-post__divider">•</span>
            <span class="blog-post__author">By {post.data.author}</span>
          </div>
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="blog-post__tags">
              {post.data.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>

    <div class="container">
      <div class="blog-post__content">
        <Content />
      </div>

      <div class="blog-post__footer">
        <div class="blog-post__cta">
          <h3>Ready to Get Started?</h3>
          <p>Contact Lake County Outdoors today for professional outdoor services.</p>
          <a href="/contact" class="btn btn--primary">Get a Free Quote</a>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding-bottom: var(--space-16);
  }

  .blog-post__hero {
    position: relative;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    padding-top: var(--space-12);
    padding-bottom: var(--space-8);
    margin-bottom: var(--space-12);
  }

  .blog-post__hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
  }

  .blog-post__header {
    position: relative;
    z-index: 1;
  }

  .blog-post__back {
    display: inline-flex;
    align-items: center;
    color: white;
    text-decoration: none;
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
    opacity: 0.9;
    transition: opacity 0.2s;
  }

  .blog-post__back:hover {
    opacity: 1;
  }

  .blog-post__title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--space-4);
    line-height: 1.2;
  }

  .blog-post__meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--text-base);
    opacity: 0.95;
  }

  .blog-post__divider {
    opacity: 0.5;
  }

  .blog-post__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-4);
  }

  .tag {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
  }

  .blog-post__content {
    max-width: 800px;
    margin: 0 auto;
  }

  .blog-post__content :global(h2) {
    color: var(--primary);
    margin-top: var(--space-12);
    margin-bottom: var(--space-4);
    font-size: var(--text-2xl);
  }

  .blog-post__content :global(h3) {
    color: var(--primary);
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
    font-size: var(--text-xl);
  }

  .blog-post__content :global(p) {
    line-height: 1.7;
    margin-bottom: var(--space-4);
    color: var(--neutral-dark);
  }

  .blog-post__content :global(ul),
  .blog-post__content :global(ol) {
    margin-bottom: var(--space-4);
    padding-left: var(--space-8);
  }

  .blog-post__content :global(li) {
    margin-bottom: var(--space-2);
    line-height: 1.7;
    color: var(--neutral-dark);
  }

  .blog-post__content :global(strong) {
    color: var(--primary);
    font-weight: 600;
  }

  .blog-post__content :global(blockquote) {
    border-left: 4px solid var(--primary);
    padding-left: var(--space-6);
    margin: var(--space-8) 0;
    font-style: italic;
    color: var(--neutral-dark);
  }

  .blog-post__footer {
    max-width: 800px;
    margin: var(--space-16) auto 0;
    padding-top: var(--space-8);
    border-top: 1px solid var(--neutral-light);
  }

  .blog-post__cta {
    background: var(--neutral-light);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    text-align: center;
  }

  .blog-post__cta h3 {
    color: var(--primary);
    margin-bottom: var(--space-3);
  }

  .blog-post__cta p {
    color: var(--neutral-dark);
    margin-bottom: var(--space-6);
  }

  .btn {
    display: inline-block;
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
  }

  .btn--primary {
    background: var(--primary);
    color: white;
  }

  .btn--primary:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  @media (min-width: 768px) {
    .blog-post__hero {
      padding-top: var(--space-16);
      padding-bottom: var(--space-12);
    }
  }
</style>
