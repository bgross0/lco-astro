---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/common/Button.astro';
import Icon from '../components/common/Icon.astro';
import settings from '../data/settings.json';

const pageTitle = "Thank You - Lake County Outdoors";
const pageDescription = "Thank you for contacting Lake County Outdoors. We've received your message and will get back to you soon.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero__overlay"></div>
    <div class="container">
      <div class="hero__content">
        <div class="hero__icon">
          <Icon name="check-circle" size={64} color="var(--white)" />
        </div>
        <h1 class="hero__title">Thank You!</h1>
        <p class="hero__subtitle">
          We've received your message and will get back to you shortly
        </p>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="content">
    <div class="container">
      <div class="content__card">
        <h2 class="content__title">What Happens Next?</h2>
        
        <div class="steps">
          <div class="step">
            <div class="step__icon">
              <Icon name="clock" size={24} color="var(--primary)" />
            </div>
            <div class="step__content">
              <h3 class="step__title">Within 24 Hours</h3>
              <p class="step__description">
                Our team will review your request and reach out to you via phone or email to discuss your needs
              </p>
            </div>
          </div>

          <div class="step">
            <div class="step__icon">
              <Icon name="user-check" size={24} color="var(--primary)" />
            </div>
            <div class="step__content">
              <h3 class="step__title">Free Consultation</h3>
              <p class="step__description">
                We'll schedule a consultation to understand your specific requirements and provide expert recommendations
              </p>
            </div>
          </div>

          <div class="step">
            <div class="step__icon">
              <Icon name="file-text" size={24} color="var(--primary)" />
            </div>
            <div class="step__content">
              <h3 class="step__title">Custom Quote</h3>
              <p class="step__description">
                You'll receive a detailed, no-obligation quote tailored to your project or service needs
              </p>
            </div>
          </div>
        </div>

        <div class="urgent">
          <h3 class="urgent__title">Need Immediate Assistance?</h3>
          <p class="urgent__description">
            For urgent matters or emergency services, please call us directly
          </p>
          <div class="urgent__actions">
            <Button href={`tel:${settings.cellphone.replace(/\D/g, '')}`} variant="primary" size="large">
              <Icon name="phone" size={20} />
              {settings.cellphone}
            </Button>
            <Button href={`tel:${settings.phone.replace(/\D/g, '')}`} variant="outline" size="large">
              <Icon name="phone" size={20} />
              {settings.phone}
            </Button>
          </div>
        </div>

        <div class="divider"></div>

        <div class="additional">
          <h3 class="additional__title">While You Wait</h3>
          <p class="additional__description">
            Feel free to explore our services and learn more about what we offer
          </p>
          <div class="additional__links">
            <Button href="/services" variant="secondary">
              View Our Services
              <Icon name="arrow-right" size={20} />
            </Button>
            <Button href="/" variant="ghost">
              Return to Homepage
              <Icon name="home" size={20} />
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta">
    <div class="container">
      <div class="cta__content">
        <h2 class="cta__title">Follow Us for Updates</h2>
        <p class="cta__description">
          Stay connected for seasonal tips, service updates, and special offers
        </p>
        <div class="cta__info">
          <Icon name="envelope" size={20} />
          <a href={`mailto:${settings.email}`} class="cta__link">
            {settings.email}
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    padding: var(--space-16) 0 var(--space-12);
    color: var(--white);
    overflow: hidden;
  }
  
  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
  
  .hero__content {
    position: relative;
    text-align: center;
  }

  .hero__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 100px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 50%;
    margin-bottom: var(--space-6);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.9;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
  
  .hero__title {
    font-size: clamp(var(--text-3xl), 5vw, var(--text-5xl));
    font-weight: var(--font-bold);
    margin-bottom: var(--space-4);
  }
  
  .hero__subtitle {
    font-size: var(--text-xl);
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Content Section */
  .content {
    padding: var(--space-20) 0;
    background-color: var(--neutral-light);
  }

  .content__card {
    background: var(--white);
    padding: var(--space-12);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    max-width: 900px;
    margin: 0 auto;
  }

  .content__title {
    font-size: var(--text-3xl);
    color: var(--primary);
    margin-bottom: var(--space-8);
    text-align: center;
  }

  /* Steps */
  .steps {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    margin-bottom: var(--space-10);
  }

  .step {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-6);
    background: var(--neutral-light);
    border-radius: var(--radius-lg);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .step:hover {
    transform: translateX(4px);
    box-shadow: var(--shadow-md);
  }

  .step__icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--white);
    border-radius: var(--radius-md);
  }

  .step__content {
    flex: 1;
  }

  .step__title {
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }

  .step__description {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* Urgent Section */
  .urgent {
    text-align: center;
    padding: var(--space-8);
    background: linear-gradient(135deg, rgba(25, 87, 128, 0.05) 0%, rgba(140, 171, 46, 0.05) 100%);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-8);
  }

  .urgent__title {
    font-size: var(--text-2xl);
    color: var(--primary);
    margin-bottom: var(--space-3);
  }

  .urgent__description {
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
  }

  .urgent__actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Divider */
  .divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border), transparent);
    margin: var(--space-8) 0;
  }

  /* Additional Section */
  .additional {
    text-align: center;
  }

  .additional__title {
    font-size: var(--text-2xl);
    color: var(--primary);
    margin-bottom: var(--space-3);
  }

  .additional__description {
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
  }

  .additional__links {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* CTA Section */
  .cta {
    padding: var(--space-16) 0;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: var(--white);
    text-align: center;
  }

  .cta__content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-4);
  }

  .cta__description {
    font-size: var(--text-lg);
    opacity: 0.95;
    margin-bottom: var(--space-6);
  }

  .cta__info {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    background: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-full);
    transition: background 0.3s ease;
  }

  .cta__info:hover {
    background: rgba(255, 255, 255, 0.25);
  }

  .cta__link {
    color: var(--white);
    text-decoration: none;
    font-weight: var(--font-medium);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero__icon {
      width: 80px;
      height: 80px;
    }

    .content__card {
      padding: var(--space-8);
    }

    .step {
      flex-direction: column;
      text-align: center;
    }

    .step__icon {
      margin: 0 auto;
    }

    .urgent__actions {
      flex-direction: column;
    }

    .additional__links {
      flex-direction: column;
    }
  }
</style>