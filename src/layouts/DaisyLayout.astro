---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title = 'Lake County Outdoors, LLC', 
  description = 'Municipal Contracting, Commercial Snow Removal, Heavy Equipment Rental. Professional outdoor services in Lake County.',
  image = '/og-image.jpg',
  canonical
} = Astro.props;

const currentUrl = Astro.url.href;
const ogImage = new URL(image, Astro.site).href;
---

<!DOCTYPE html>
<html lang="en" data-theme="lakecounty">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Lake County Outdoors, LLC" />
    <link rel="canonical" href={canonical || currentUrl} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:site_name" content="Lake County Outdoors, LLC" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#4A90E2" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=3" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png?v=3" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=3" />
    
    <!-- Fonts: preconnect + non-blocking stylesheet load -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      />
    </noscript>
    
    <!-- Phosphor Icons -->
    <script src="https://unpkg.com/@phosphor-icons/web@2.1.1" defer></script>
    
    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <style>
      /* Base styles for DaisyUI layout */
      [data-theme="lakecounty"] {
        font-family: 'Inter', system-ui, sans-serif;
      }
      
      /* Ensure proper image sizing in DaisyUI components */
      [data-theme="lakecounty"] img {
        max-width: 100%;
        height: auto;
      }
      
      /* Fix for carousel images */
      [data-theme="lakecounty"] .carousel-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      
      /* Ensure stats icons are visible */
      [data-theme="lakecounty"] .stat-figure svg {
        width: 2rem;
        height: 2rem;
      }
    </style>
  </head>
  <body>
    <a href="#main" class="skip-to-content">Skip to content</a>
    
    <Header />
    
    <main id="main">
      <slot />
    </main>
    
    <Footer />
    
    <!-- Local Business Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Lake County Outdoors, LLC",
        "description": "Professional outdoor services including commercial snow removal, landscaping, and municipal contracting in Lake County.",
        "telephone": "612-655-0648",
        "email": "caden@lakecountyoutdoor.com",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Lake County",
          "addressRegion": "MN",
          "addressCountry": "US"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": "",
          "longitude": ""
        },
        "url": "https://lakecountyoutdoor.com",
        "image": "https://lakecountyoutdoor.com/og-image.jpg",
        "priceRange": "$$",
        "openingHours": "Mo-Fr 07:00-18:00",
        "sameAs": []
      }
    </script>
    
    <!--Start of Tawk.to Script-->
    <script type="text/javascript">
    var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
    (function(){
    var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
    s1.async=true;
    s1.src='https://embed.tawk.to/68ab739ae831f01925325a73/1j3ern4m7';
    s1.charset='UTF-8';
    s1.setAttribute('crossorigin','*');
    s0.parentNode.insertBefore(s1,s0);
    })();
    </script>
    <!--End of Tawk.to Script-->
  </body>
</html>

<style is:global>
  /* Skip to content link */
  .skip-to-content {
    position: absolute;
    left: -9999px;
    z-index: 999;
    padding: 1em;
    background-color: #fff;
    text-decoration: none;
    color: #000;
  }
  
  .skip-to-content:focus {
    left: 50%;
    transform: translateX(-50%);
    top: 0;
  }
</style>
