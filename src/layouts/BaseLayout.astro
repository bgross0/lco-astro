---
import '../styles/global.css';
import '../styles/utilities.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import settings from '../data/settings.json';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title = settings.site_title, 
  description = settings.site_description,
  image = settings.logo,
  canonical
} = Astro.props;

const currentUrl = Astro.url.href;
const ogImage = new URL(image, Astro.site).href;

// Extract phone number from cellphone string
const phoneMatch = settings.cellphone.match(/\((\d{3})\)\s*(\d{3})-(\d{4})/);
const phoneNumber = phoneMatch ? `${phoneMatch[1]}-${phoneMatch[2]}-${phoneMatch[3]}` : '612-655-0648';

// Parse address
const addressParts = settings.address.split(',').map(part => part.trim());
const streetAddress = addressParts[0] || '7777 Washington Ave S, Suite 4';
const addressLocality = addressParts[1] || 'Edina';
const addressRegion = addressParts[2]?.split(' ')[0] || 'MN';
const postalCode = addressParts[2]?.split(' ')[1] || '55439';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Lake County Outdoors, LLC" />
    <link rel="canonical" href={canonical || currentUrl} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:site_name" content="Lake County Outdoors, LLC" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1080" />
    <meta property="og:image:height" content="1080" />
    <meta property="og:image:alt" content="Lake County Outdoors Logo" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#4A90E2" />
    
    <!-- Favicon - Multiple sizes for better support -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=3" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png?v=3" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png?v=3" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192.png?v=3" />
    <link rel="icon" type="image/png" sizes="512x512" href="/favicon-512.png?v=3" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=3" />
    <link rel="manifest" href="/site.webmanifest?v=3" />
    
    <!-- Fonts Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Phosphor Icons - Removed CDN loading, using inline SVG icons instead -->
    
    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <!-- Google Tag Manager -->
    {settings.analytics?.enableTracking && settings.analytics?.gtmId && (
      <script set:html={`(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','${settings.analytics.gtmId}');`}></script>
    )}
    <!-- End Google Tag Manager -->
    
    <!-- Shapo Reviews Widget - Load after page is interactive -->
    <script>
      window.addEventListener('load', () => {
        setTimeout(() => {
          const script = document.createElement('script');
          script.id = 'shapo-embed-js';
          script.src = 'https://cdn.shapo.io/js/embed.js';
          script.defer = true;
          document.head.appendChild(script);
        }, 2000); // Load 2 seconds after page load
      });
    </script>
    <script type="application/ld+json" id="shapo-ratingschema-c301e81c93"></script>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    {settings.analytics?.enableTracking && settings.analytics?.gtmId && (
      <noscript>
        <iframe 
          src={`https://www.googletagmanager.com/ns.html?id=${settings.analytics.gtmId}`}
          height="0" 
          width="0" 
          style="display:none;visibility:hidden">
        </iframe>
      </noscript>
    )}
    <!-- End Google Tag Manager (noscript) -->
    
    <a href="#main" class="skip-to-content">Skip to content</a>
    
    <Header />
    
    <main id="main" class="main-content">
      <slot />
    </main>
    
    <Footer />
    
    <!-- Local Business Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": settings.site_title,
      "description": settings.site_description,
      "telephone": phoneNumber,
      "email": settings.email,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": streetAddress,
        "addressLocality": addressLocality,
        "addressRegion": addressRegion,
        "postalCode": postalCode,
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": settings.geo.latitude.toString(),
        "longitude": settings.geo.longitude.toString()
      },
      "url": "https://lakecountyoutdoor.com",
      "image": `https://lakecountyoutdoor.com${settings.logo}`,
      "priceRange": settings.priceRange,
      "openingHours": settings.openingHours,
      "sameAs": Object.values(settings.social).filter(url => url)
    })}></script>
    
    <!--Start of Tawk.to Script - Delayed Loading-->
    <script type="text/javascript">
    window.addEventListener('load', () => {
      setTimeout(() => {
        var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
        (function(){
        var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
        s1.async=true;
        s1.src='https://embed.tawk.to/68ab739ae831f01925325a73/1j3ern4m7';
        s1.charset='UTF-8';
        s1.setAttribute('crossorigin','*');
        s0.parentNode.insertBefore(s1,s0);
        })();
      }, 3000); // Load 3 seconds after page load
    });
    </script>
    <!--End of Tawk.to Script-->
  </body>
</html>