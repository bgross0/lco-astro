# Sharp configuration - use prebuilt binaries
sharp_binary_host=https://github.com/lovell/sharp/releases/download
sharp_libvips_binary_host=https://github.com/lovell/sharp-libvips/releases/download

# Performance settings for CI/CD
fetch-retries=3
fetch-retry-mintimeout=15000
fetch-retry-maxtimeout=90000

# Skip optional dependencies that might cause issues
omit=optional

# Disable progress bar for cleaner logs
progress=false